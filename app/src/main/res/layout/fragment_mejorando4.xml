            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B. ¿Cuantas plantas crecieron más de 12 cm?"
                android:textColor="#000000" />

            <RadioGroup
                android:id="@+id/rg50"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb193"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13." />

                <RadioButton
                    android:id="@+id/rb194"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10." />

                <RadioButton
                    android:id="@+id/rb195"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9." />

                <RadioButton
                    android:id="@+id/rb196"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1." />

                <RadioButton
                    android:id="@+id/rb197"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5." />
            </RadioGroup>

            <TextView
                android:id="@+id/textView185"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="C. ¿Cuál fué el promedio de crecimiento de las plantas ?"
                android:textColor="#000000"
                android:textSize="15dp" />

            <RadioGroup
                android:id="@+id/rg47"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb178"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1,16" />

                <RadioButton
                    android:id="@+id/rb179"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11,6" />

                <RadioButton
                    android:id="@+id/rb180"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12,6" />

