<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BlankFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20sp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/logowow3" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvIntroduccion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="IntroducciÃ³n"
                    android:textColor="#000000"
                    android:textSize="21sp" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/ivIntroduccion"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:src="@drawable/introduccion" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvObjetivos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="Objetivos"
                    android:textColor="#000000"
                    android:textSize="21sp" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/ivObjetivos"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:src="@drawable/objetivos" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvUnidades"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="Unidades de aprendisaje"
                    android:textColor="#000000"
                    android:textSize="21sp" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/ivUnidades"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:src="@drawable/unidades" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvSalir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:cardElevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="Salir"
                    android:textColor="#000000"
                    android:textSize="21sp" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/ivSalir"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:src="@drawable/salir" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>